# host group for nodes, includes region info
[nodes]
poc-master.cloud.chx openshift_node_labels="{'region': 'infra', 'zone': 'default'}"
poc-node1.cloud.chx  openshift_node_labels="{'region': 'primary', 'zone': 'z1'}"
